<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root">
        <block class="Magento\Review\Block\Product\View\ListView" name="product.info.product_additional_data" as="product_additional_data">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Mazentop_AdvancedReview::list.phtml</argument>
            </action>
        </block>
     	<block class="Magento\Theme\Block\Html\Pager" name="product_review_list.toolbar">
            <arguments>
                <argument name="show_per_page" xsi:type="boolean">true</argument>
                <argument name="show_amounts" xsi:type="boolean">true</argument>
            </arguments>
        </block>
    </container>
</layout>
