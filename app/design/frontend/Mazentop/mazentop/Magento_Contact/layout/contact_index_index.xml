<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Contact Us</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Contact Us</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="sidebar.main">
             <container name="left-cms-links" label="Left CMS Links" as="left-cms-links" htmlTag="div" htmlClass="left-cms-links" after="-">
                <block class="Magento\Cms\Block\Block" name="block_cms-links">
                    <arguments>
                        <argument name="block_id" xsi:type="string">cms-page-left-links</argument>
                    </arguments>
                </block> 
            </container> 
        </referenceContainer>
        <referenceBlock name="left.menu" remove="true"/>
        <referenceBlock name="block_catelog_hotproleft" remove="true"/>
        <referenceBlock name="block_catelog_recentlyview" remove="true"/>
        <referenceBlock name="block_catelog_adleft" remove="true"/>
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <referenceBlock name="wishlist_sidebar" remove="true"/>
    </body>
</page>
